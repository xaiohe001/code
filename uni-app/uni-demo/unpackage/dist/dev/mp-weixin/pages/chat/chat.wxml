<view class="chat"><view class="title">{{''+title+''}}</view><view class="chat-list"><block wx:for="{{lists}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="{{[[(item.name==title)?'left':''],[(item.name!=title)?'right':'']]}}"><image src="{{item.avatar}}" mode="widthFix"></image><text>{{item.text}}</text></view></block></view><view class="chat-send"><textarea value="{{text}}" placeholder="请输入聊天内容" data-event-opts="{{[['input',[['__set_model',['','text','$event',[]]]]]]}}" bindinput="__e"></textarea><view data-event-opts="{{[['tap',[['send',['$event']]]]]}}" class="send" bindtap="__e">发送</view></view></view>