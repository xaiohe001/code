
.images {
	width: 100%;
}
.close {
	position: fixed;
	right: 20rpx;
	top: 20rpx;
	color: #fff;
	font-size: 50rpx;
}
/* .images image {
	width: 100%;
} */
.rate-img {
	width: 300rpx;
	height: 300rpx;
}
.rate-title {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	color: #666;
	font-size: 24rpx;
}
.rate-star {
	color: rgb(255, 96, 0);
	font-size: 24rpx;
}
.rate-item {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	padding: 30rpx 0;
	border-bottom: 2rpx solid #eee;
}
.rate-avatar {
	-webkit-box-flex: 0;
	-webkit-flex: 0 0 60rpx;
	        flex: 0 0 60rpx;
	width: 60rpx;
	border-radius: 50%;
	margin-right: 20rpx;
}
.uni-radio .uni-radio-input {
	width: 20rpx !important;
	height: 20rpx !important;
}
.radio {
	display: block;
	height: 80rpx;
	line-height: 80rpx;
	color: #666;
	font-size: 28rpx;
	border-top: 2rpx solid #eee;
	border-bottom: 2rpx solid #eee;
}
.rating-header {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
	padding: 30rpx;
}
.rating-sort {
	height: 56rpx;
	line-height: 56rpx;
	padding: 0 20rpx;
	background: #ebf5ff;
	margin-right: 20rpx;
	color: #666;
	font-size: 24rpx;
}
.rating-num {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	padding: 20rpx 0 40rpx 30rpx;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	border-bottom: 20rpx solid #f5f5f5;
}
.rating-num view {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
}
.rating-num text {
	display: block;
	text-align: center;
}
.rating-num view text:nth-of-type(1) {
	color: #666;
	font-size: 24rpx;
}
.rating-num view text:nth-of-type(2) {
	margin-top: 10rpx;
	color: #666;
	font-size: 36rpx;
}

